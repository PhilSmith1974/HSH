@model IEnumerable<HSH.Areas.Admin.Models.PropertyModel>
@using HSH.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}
<h2>Search</h2>

<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyLinkTexts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyTypes)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsFavourite)
        </th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyLinkText)
                (@{@Html.DisplayFor(modelItem => item.PropertyTypeId)})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyType)
                (@{@Html.DisplayFor(modelItem => item.PropertyTypeId)})
            </td>
            @*<td>
                @{ string favouriteGlyphicon = item.IsFavourite ? "glyphicon glyphicon-heart" : "";}
                <span class="@favouriteGlyphicon"></span>
            </td>*@
        </tr>
    }
</table>