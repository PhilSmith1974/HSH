@model IEnumerable<HSH.Areas.Admin.Models.PropertyModel>
@using HSH.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Property Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyLinkTexts)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyTypes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyLinkText)
            (@{@Html.DisplayFor(modelItem => item.PropertyTypeId)})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyType)
            (@{@Html.DisplayFor(modelItem => item.PropertyTypeId)})
        </td>

        @Html.Partial("_TableButtonsPartial",
         new SmallButtonModel { Id = item.Id })
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>*@
    </tr>
}

</table>
