@model IEnumerable<HSH.Areas.Admin.Models.FavouritePropertyModel>
@using HSH.Areas.Admin.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.PropertyTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FavouriteTitle)
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PropertyTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FavouriteTitle)
        </td>

        @Html.Partial("_TableButtonsPartial",
       new SmallButtonModel { FavouriteId = item.FavouriteId, PropertyId = item.PropertyId })
    </tr>           
  
    }

</table>
