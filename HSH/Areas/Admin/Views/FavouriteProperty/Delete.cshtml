@model HSH.Areas.Admin.Models.FavouritePropertyModel
@using HSH.Areas.Admin.Models

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Favourite Property</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.FavouriteTitle)</dt>
        <dd>@Html.DisplayFor(model => model.FavouriteTitle)</dd>
        <dt>@Html.DisplayNameFor(model => model.PropertyTitle)</dt>
        <dd>@Html.DisplayFor(model => model.PropertyTitle)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> 
        @Html.Partial("_EditButtonDetailPartial", 
       new EditButtonModel { FavouriteId = Model.FavouriteId, PropertyId = Model.PropertyId })
        @Html.Partial("_BackToListButtonPartial")
    </div>
    }
</div>
